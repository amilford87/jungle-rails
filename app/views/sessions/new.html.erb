<h1>Login</h1>

<%= form_tag '/login' do %>

  <div class="login-info">
    <strong>Email:</strong> <%= text_field_tag :email, "", class: 'form-control' %>
  </div>

  <div class="login-info">
    <strong>Password:</strong> <%= password_field_tag :password, "", class: 'form-control'%>
  </div>

  <div class="login-button">
    <%= submit_tag "Login", class: 'btn btn-primary' %>
  </div>

<% end %>