<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>
    <br><br>
<% if @product.reviews.any? %>
<h3> Average Rating: <%= @product.reviews.average(:rating).round(2) %> ‚≠ê</h3>
<% end %>
<div>
<br>
</div>
  <% if current_user %>
  <div class="form-group">
  <%= form_for [@product, @review] do |form| %>
 <%= form.label "Rating:"%> <%= form.select :rating, [5, 4, 3, 2, 1], :class => "dropdown-menu" %><br /><br>
  <%= form.label "Review:" %> <%= form.text_field :description, :style => "width:28%;", :class => "form-control" %><p class="error"><%= @error %></p>
  <%= form.submit({:class => 'btn btn-primary'}) %>
  </div>
  <% end %>
  <% end %>
  <br />
 <div class="col-sm-4">
    <table class="table table-bordered">
<h4> Product Reviews </h4>
      <thead>
        <tr>
          <th>User</th>
          <th>Rating</th>
          <th>Review</th>
          <th>Delete</th>
           </tr>
      </thead>
      <tbody>
      <tr>
      <% @product.reviews.reverse_each do |review| %>
    <div>
    <% if review.description != ''%>
    <td><%= review.user.firstname %></td>
    <td><%= review.rating%> / 5</td>
    <td>
    <%= review.description %>
    </td>
    <td>
    <% if review.user == current_user %>
    <%= link_to fa_icon('trash'), [review.product, review],
                method: :delete,
                data: { confirm: "Are you sure?"} %>
  <% end %>
  </td>
    <% end %>
    </tr><% end %>
     </tbody>
     </table>
    </div>


  </article>
</section>
