<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

  <br>
  <br>
  <div >
  <%= form_for [@product, @review] do |form| %>
 <%= form.label "Rating:"%> <%= form.select :rating, [1, 2, 3, 4, 5] %><br />
  <%= form.label "Review:" %> <%= form.text_field :description, :style => "width:28%;" %><br />
  <%= form.submit %>
  <% end %>
  </div>
  <br />
 <div class="col-sm-4">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>User</th>
          <th>Rating</th>
          <th>Review</th>
           </tr>
      </thead>
      <tbody>
      <tr>
      <% @product.reviews.each do |review| %>
    <div>
    <td><%= review.user.firstname %></td>
    <td><%= review.rating%> / 5</td>
    <td>
    <%= review.description %>
    </td>
    </tr><% end %>
     </tbody>
     </table>
    </div>


  </article>
</section>
